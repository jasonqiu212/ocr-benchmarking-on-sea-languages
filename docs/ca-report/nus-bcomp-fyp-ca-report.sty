\newcommand{\department}[1]{\gdef\@dept{#1}}
\newcommand{\faculty}[1]{\gdef\@faculty{#1}}
\newcommand{\university}[1]{\gdef\@university{#1}}
\newcommand{\academicyear}[1]{\gdef\@academicyear{#1}}
\newcommand{\projectid}[1]{\gdef\@projectid{#1}}
\newcommand{\supervisor}[1]{\gdef\@supervisor{#1}}
\newcommand{\advisor}[1]{\gdef\@advisor{#1}}

\newcommand{\makecover}{
    \null
    \thispagestyle{empty}
    \vspace*{\fill}
    \begin{center}
        {B.Comp. Dissertation CA Report\\}
        \vspace{1.2in}
        {\Large\bfseries\@title} \\
        \vspace{1.2in}
        {By \\ \@author \\}
        \vspace{1.6in}
        {\@dept \\ \@faculty \\ \@university \\}
        \vspace{0.3in}
        {\@academicyear}
    \end{center}
    \vspace*{\fill}
    \null
    \clearpage
}

\renewcommand{\maketitle}{
    \null
    \thispagestyle{empty}
    \vspace*{\fill}
    \begin{center}
        {B.Comp. Dissertation CA Report\\}
        \vspace{0.9in}
        {\Large\bfseries\@title} \\
        \vspace{0.9in}
        {By \\ \@author \\}
        \vspace{1.2in}
        {\@dept \\ \@faculty \\ \@university \\}
        \vspace{0.3in}
        {\@academicyear}
    \end{center}
    \vspace*{\fill}
    \null
    Project ID: \@projectid \\
    Supervisor: \@supervisor \\
    Advisor: \@advisor
    \null
}

