\setsecnumdepth{subsection}

% Table of contents styling
\renewcommand{\contentsname}{Table of Contents}
\settocdepth{subsection}

\newcommand{\greentc}[1]{\textbf{\textcolor{Green}{#1}}}  % Green for positive values
\newcommand{\redtc}[1]{\textcolor{Red}{#1}}  % Red for negative values
