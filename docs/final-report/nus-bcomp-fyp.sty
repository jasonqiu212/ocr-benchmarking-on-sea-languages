\RequirePackage{graphicx}
\RequirePackage{multirow}
\RequirePackage{changepage}
\RequirePackage{booktabs}
\RequirePackage{hyperref}
\RequirePackage{xcolor}
\RequirePackage{fontspec}
\RequirePackage[style=apa, backend=biber]{biblatex}

\definecolor{DarkBlue}{RGB}{0, 42, 97}
\definecolor{Green}{RGB}{57, 126, 73}
\definecolor{Red}{RGB}{182, 68, 51}

\hypersetup{
    colorlinks=true,    % Enables colored links
    linkcolor=black,    % Color of internal links
    citecolor=black,    % Color of citations
    urlcolor=DarkBlue   % Color of external links
}

\newcommand{\department}[1]{\gdef\@dept{#1}}
\newcommand{\faculty}[1]{\gdef\@faculty{#1}}
\newcommand{\university}[1]{\gdef\@university{#1}}
\newcommand{\academicyear}[1]{\gdef\@academicyear{#1}}
\newcommand{\projectid}[1]{\gdef\@projectid{#1}}
\newcommand{\supervisor}[1]{\gdef\@supervisor{#1}}
\newcommand{\advisor}[1]{\gdef\@advisor{#1}}

\newcommand{\makecover}{
    \null
    \thispagestyle{empty}
    \vspace*{\fill}
    \begin{center}
        {B.Comp. Dissertation \\}
        \vspace{1.2in}
        {\Large\bfseries\@title} \\
        \vspace{1.2in}
        {By \\ \@author \\}
        \vspace{1.6in}
        {\@dept \\ \@faculty \\ \@university \\}
        \vspace{0.3in}
        {\@academicyear}
    \end{center}
    \vspace*{\fill}
    \null
    \clearpage
}

\renewcommand{\maketitle}{
    \null
    \thispagestyle{empty}
    \vspace*{\fill}
    \begin{center}
        {B.Comp. Dissertation \\}
        \vspace{0.6in}
        {\Large\bfseries\@title} \\
        \vspace{0.6in}
        {By \\ \@author \\}
        \vspace{0.4in}
        {\@dept \\ \@faculty \\ \@university \\}
        \vspace{0.3in}
        {\@academicyear}
    \end{center}
    \vspace*{\fill}
    \null
    Project ID: \@projectid \\
    Supervisor: \@supervisor \\
    Advisor: \@advisor \\
    Deliverables: \\
    \hspace*{0.3in} Report: 1 Volume \\
    \hspace*{0.3in} Source code: 1 GitHub repository
    \null
    \vspace*{\fill}
}

